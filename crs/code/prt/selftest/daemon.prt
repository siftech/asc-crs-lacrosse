my $temp_file_path_prefix = "/tmp/prt-daemon-test-" . time();

# The exit command lists the existing temp files, then counts them and
# exits with the count.
my $exit_cmd = "ls $temp_file_path_prefix*; export RESULT=\$(ls $temp_file_path_prefix* | wc -l); exit \$RESULT";

# Use line comparo which matches the results of the ls.
my $comparo = new PRT::LineComparo(
    show_comparisons => 0,
    key_fact_regexp   => "^/tmp/prt-daemon-test-\\d+-(.*)",
    );

# Test specification hash reference -- The name of the variable is not
# important, EXCEPT that it must be "returned" by this file; i.e. it
# must be the the last reference in the file
$test = {
  # Name: single-word (no spaces) name of the test
  # Default: basename of filename sans .prt file extension
  # name => "sample",

  # Description: arbitrary text for human consumption only
  # Default: "<no-description>"
  description => "Checks the daemon portion of the test spec",

  # Keywords: arbitrary list of key words by which can be used to
  #    filter the tests when running or grepshowing results, etc...
  # Default: [ ] - empty list
  keywords => [ qw / prt test-specification / ],

  # DefaultIgnore: if true, will skip this test unless either:
  #   a) the filename or test-name is explicitly listed on the command line
  #   b) the `--all` argument is given to prt
  # Default: undef/0/false
  # defaultIgnore => 1,

  # Test-Harness Includes: array ref of *.inc files to include in ALL
  #    agents, presumably needed as part of the test framework.
  # Default: [ ] - empty list
  # includes => [ "test-harness.inc" ],

  # Inter-Agent Delay: delay (in seconds) between each agent startup
  # Default: 0 (seconds)
  #agent_delay => 1,

  # Agents: Array-ref of agents, each of which MUST specify:
  #  - name: PRS name of the agent, without spaces
  #  - inc:  array ref of include files
  agents => [
      {
        name         => "daemonshort",
        description  => "exits between the two non-daemon agents",
        command   => ["bash", "-c", "set -x; export TMP_AGENT_FILE=\"$temp_file_path_prefix-short\"; trap \"rm \$TMP_AGENT_FILE\" EXIT; touch \$TMP_AGENT_FILE; sleep 2; $exit_cmd" ],
        exit_code    => 3,
        daemon       => 1,
        comparo      => $comparo,
      },
      {
        name         => "daemonlong",
        description  => "does not exit until the test is finished, will exit from kill with code 0",
        command   => ["bash", "-c", "set -x; export TMP_AGENT_FILE=\"$temp_file_path_prefix-daemonlong\"; trap \"rm \$TMP_AGENT_FILE\" EXIT; touch \$TMP_AGENT_FILE; sleep 10; $exit_cmd" ],
        exit_code    => 0,
        daemon       => 1,
        comparo      => $comparo,
      },
      {
        name         => "nondaemonshort",
        description  => "exists quickly",
        command   => ["bash", "-c", "set -x; export TMP_AGENT_FILE=\"$temp_file_path_prefix-nondaemonshort\"; trap \"rm \$TMP_AGENT_FILE\" EXIT; touch \$TMP_AGENT_FILE; sleep 1; $exit_cmd" ],
        exit_code    => 4,
        #daemon       => 0,
        comparo      => $comparo,
      },
      {
        name         => "nondaemonlong",
        description  => "causes the test to finish",
        command   => ["bash", "-c", "set -x; export TMP_AGENT_FILE=\"$temp_file_path_prefix-nondaemonlong\"; trap \"rm \$TMP_AGENT_FILE\" EXIT; touch \$TMP_AGENT_FILE; sleep 3; $exit_cmd" ],
        exit_code    => 2,
        #daemon       => 0,
        comparo      => $comparo,
      }
    ]
  };

# you could put other code here, but not sure what that would serve.

# Always end with a reference to the test specification hash reference.
$test;
